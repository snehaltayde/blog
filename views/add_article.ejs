<% include ../views/partials/header %>
<div class="container">


    <h1><%= title %></h1>
    <% if(typeof errors !== 'undefined'){errors.forEach(function(error){%>

      <div class="alert alert-danger"><%= error.msg %></div>


      <% })} %>
  <form id="addarticle" class="form-control" action="/articles/add" method="post">
      <div class="form-group">
        <label for=""> Title:</label>
        <input class="form-control" type="text" name="title">
      </div>

      <div class="form-group">
        <label for=""> Subtitle:</label>
        <input class="form-control"type="text" name="subtitle">
      </div>

      <div class="form-group">
        <label for=""> Select Category:</label>
        <select class="form-control" name='category' form="addarticle">
          <% categories.forEach(function(category){ %>

            <option value="<%=category._id %>"><%=category.title %></option>
          <% }) %>

        </select>
      </div>

      <div class="form-group">
        <label for=""> Author:</label>
        <input class="form-control" type="text" name="author">
      </div>

      <div class="form-group">
        <label for=""> Body:</label>
        <textarea  class="form-control" name="body" rows="8" cols="80"></textarea>
      </div>

      <input class="form-control" type="submit" name="submit" value="save">
      <a href="/manage/articles"></a>


    </form>
    </div>
    <% include ../views/partials/footer %>
