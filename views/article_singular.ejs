<% include ../views/partials/header %>
    <div class="container">
      <h1><%= title %></h1>

      <% if(typeof errors !== 'undefined'){errors.forEach(function(error){%>
        <div class="alert alert-danger"><%= error.msg %></div>

        <% })} %>
    <div class="row">
        <div class="col-md-12">
      <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
        <div class="card-header"><%=article.category%></div>
        <div class="card-body">
          <h5 class="card-title"><%=article.title%></h5>
          <p class="card-text"><%=article.subtitle%></p>
        </div>
      </div>
      </div>
      <p>
    <div class="container">


        <h4>Add Comment</h4>
<form class="" action="/articles/comments/add/<%= article._id%>" method="post">
<div class="form-group">
  <label for="">Comment</label>
<input type="text" class="form-control" name="comment_subject" value="">
</div>
<div class="form-group">
  <label for="">Name</label>
<input type="text" class="form-control" name="comment_author" value="">
</div>
<div class="form-group">
  <label for="">Email</label>
<input type="text" class="form-control" name="comment_email" value="">
</div>
<div class="form-group">
  <label for="">Body</label>
<textarea  class="form-control" name="comment_body" value=""></textarea>
<input type="submit" class="btn btn-primary" name="submit" value="Add Comment">
</div>
</form>
  </div>

<% article.comments.forEach(function(comments){ %>
  <div class="alert alert-danger">
    <br>
<h5>Posted By <%= comments.comment_author %> </h5>
<p><%=comments.comment_body%></p>
  </div>
  <% }) %>
      </p>
    <% include ../views/partials/footer %>
